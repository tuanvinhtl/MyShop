@model  TeduShop.Web.Models.ProductViewModel
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layouts.cshtml";
    var moreImage = (List<string>)ViewBag.MoreImagesProduct;
    var Tags = (IEnumerable<TeduShop.Web.Models.TagViewModel>)ViewBag.Tags;
}
@section Style{
    <link href="/Assets/client/css/form.css" rel="stylesheet" type="text/css" media="all" />
}
@section jsFooter{
    <script src="/Assets/client/js/imagezoom.js"></script>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script defer src="/Assets/client/js/jquery.flexslider.js"></script>
    <link rel="stylesheet" href="/Assets/client/css/flexslider.css" type="text/css" media="screen" />
<script src="~/Assets/client/js/controller/shopingcart.js"></script>
    <script>
        // Can also be used with $(document).ready()
        $(window).load(function () {
            $('.flexslider').flexslider({
                animation: "slide",
                controlNav: "thumbnails"
            });
        });
    </script>
}
<div class="single">
    <div class="container">
        <div class="col-md-9">
            <div class="col-md-5 grid">
                <div class="flexslider">
                    <ul class="slides">
                        <li data-thumb="@Model.Images">
                            <div class="thumb-image"> <img src="@Model.Images" data-imagezoom="true" class="img-responsive"> </div>
                        </li>
                        @foreach (var item in moreImage)
                        {
                            if (moreImage.Count > 0)
                            {
                        <li data-thumb="@item">
                            <div class="thumb-image"> <img src="@item" data-imagezoom="true" class="img-responsive"> </div>
                        </li>
                            }
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md-7 single-top-in">
                <div class="span_2_of_a1 simpleCart_shelfItem">
                    <h3>@Model.Name</h3>
                    <p class="in-para"> @Model.Descryption</p>
                    <div class="price_single">
                        <span class="reducedfrom item_price">$@Model.Price</span>
                        <a href="#">click for offer</a>
                        <div class="clearfix"></div>
                    </div>
                    <h4 class="quick">Xem Tổng Quát</h4>
                    <p class="quick_desc">@Model.Descryption</p>
                    <p class="Tags_desc">
                        @foreach (var tag in Tags)
                        {
                            <a href="/tag/@(tag.TagID).html"><span class="badge">@tag.Name</span></a>
                        }
                    </p>
                    <div class="wish-list">
                        <ul>
                            <li class="wish"><a href="#"><span class="glyphicon glyphicon-check" aria-hidden="true"></span>Thêm vào yêu thích</a></li>
                            <li class="compare"><a href="#"><span class="glyphicon glyphicon-resize-horizontal" aria-hidden="true"></span>Thêm vào so sánh</a></li>
                        </ul>
                    </div>
                    <div class="quantity">
                        <div class="quantity-select">
                            <div class="entry value-minus">&nbsp;</div>
                            <div class="entry value"><span>1</span></div>
                            <div class="entry value-plus active">&nbsp;</div>
                        </div>
                    </div>
                    <!--quantity-->
                    <script>
                        $('.value-plus').on('click', function () {
                            var divUpd = $(this).parent().find('.value'), newVal = parseInt(divUpd.text(), 10) + 1;
                            divUpd.text(newVal);
                        });

                        $('.value-minus').on('click', function () {
                            var divUpd = $(this).parent().find('.value'), newVal = parseInt(divUpd.text(), 10) - 1;
                            if (newVal >= 1) divUpd.text(newVal);
                        });
                    </script>
                    <!--quantity-->

                    <a href="#" data-id="@Model.ID" class="add-to item_add hvr-skew-backward btnAddToCart">Thêm vào giỏ</a>
                    <div class="clearfix"> </div>
                </div>

            </div>
            <div class="clearfix"> </div>
            <!---->
            <div class="tab-head">
                <nav class="nav-sidebar">
                    <ul class="nav tabs">
                        <li class="active"><a href="#tab1" data-toggle="tab">Mô Tả Sản Phẩm</a></li>
                        <li class=""><a href="#tab2" data-toggle="tab">Thông Tin Thêm</a></li>
                        <li class=""><a href="#tab3" data-toggle="tab">Đánh Giá</a></li>
                    </ul>
                </nav>
                <div class="tab-content one">
                    <div class="tab-pane active text-style" id="tab1">
                        <div class="facts">
                            <p>@Model.Descryption</p>
                            <ul>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Research</li>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Design and Development</li>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Porting and Optimization</li>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>System integration</li>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Verification, Validation and Testing</li>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Maintenance and Support</li>
                            </ul>
                        </div>

                    </div>
                    <div class="tab-pane text-style" id="tab2">

                        <div class="facts">
                            <p> @Html.Raw(Model.Content)</p>
                            <ul>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Multimedia Systems</li>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Digital media adapters</li>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Set top boxes for HDTV and IPTV Player  </li>
                            </ul>
                        </div>

                    </div>
                    <div class="tab-pane text-style" id="tab3">

                        <div class="facts">
                            <p> @Model.Descryption </p>
                            <ul>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Research</li>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Design and Development</li>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Porting and Optimization</li>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>System integration</li>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Verification, Validation and Testing</li>
                                <li><span class="glyphicon glyphicon-ok" aria-hidden="true"></span>Maintenance and Support</li>
                            </ul>
                        </div>

                    </div>

                </div>
                <div class="clearfix"></div>
            </div>
            <!---->
        </div>
        <!----->
        @{Html.RenderAction("ProductLeft", "Product");}
        <div class="clearfix"> </div>
    </div>

    <!--brand-->
    <div class="container">
        <div class="brand">
            <div class="col-md-3 brand-grid">
                <img src="/Assets/client/images/ic.png" class="img-responsive" alt="">
            </div>
            <div class="col-md-3 brand-grid">
                <img src="/Assets/client/images/ic1.png" class="img-responsive" alt="">
            </div>
            <div class="col-md-3 brand-grid">
                <img src="/Assets/client/images/ic2.png" class="img-responsive" alt="">
            </div>
            <div class="col-md-3 brand-grid">
                <img src="/Assets/client/images/ic3.png" class="img-responsive" alt="">
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
    <!--//brand-->
</div>
