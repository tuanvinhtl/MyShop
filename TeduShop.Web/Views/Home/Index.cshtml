@model TeduShop.Web.Models.HomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layouts.cshtml";
}

@section Banner{
    <div class="banner">
    <div class="container">
        <section class="rw-wrapper">
            <h1 class="rw-sentence">
                <span>Thời trang &amp; Sắc đẹp</span>

                <div class="rw-words rw-words-1">
                    @foreach (var item in Model.Slides)
                    {
                        <span>@item.Content</span>
                    }
                    
                </div>
                <div class="rw-words rw-words-2">
                    @foreach (var item in Model.Slides)
                    {
                        <span>@item.Descryption</span>
                    }
                </div>
            </h1>
        </section>
    </div>
</div>
}
<div class="content">
    <div class="container">
        <div class="content-top">
            <div class="col-md-6 col-md">
                <div class="col-1">
                    <a href="single.html" class="b-link-stroke b-animate-go  thickbox">
                        <img src="/Assets/client/images/pi.jpg" class="img-responsive" alt="" /><div class="b-wrapper1 long-img"><p class="b-animate b-from-right    b-delay03 ">Lorem ipsum</p><label class="b-animate b-from-right    b-delay03 "></label><h3 class="b-animate b-from-left    b-delay03 ">Trendy</h3></div>
                    </a>

                    <!---<a href="single.html"><img src="images/pi.jpg" class="img-responsive" alt=""></a>-->
                </div>
                <div class="col-2">
                    <span>Hot Deal</span>
                    <h2><a href="single.html">Luxurious &amp; Trendy</a></h2>
                    <p>Contrary to popular belief, Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature from 45 BC, making it over 2000 years</p>
                    <a href="single.html" class="buy-now">Buy Now</a>
                </div>
            </div>
            <div class="col-md-6 col-md1">
                <div class="col-3">
                    <a href="single.html">
                        <img src="/Assets/client/images/pi1.jpg" class="img-responsive" alt="">
                        <div class="col-pic">
                            <p>Lorem Ipsum</p>
                            <label></label>
                            <h5>For Men</h5>
                        </div>
                    </a>
                </div>
                <div class="col-3">
                    <a href="single.html">
                        <img src="/Assets/client/images/pi2.jpg" class="img-responsive" alt="">
                        <div class="col-pic">
                            <p>Lorem Ipsum</p>
                            <label></label>
                            <h5>For Kids</h5>
                        </div>
                    </a>
                </div>
                <div class="col-3">
                    <a href="single.html">
                        <img src="/Assets/client/images/pi3.jpg" class="img-responsive" alt="">
                        <div class="col-pic">
                            <p>Lorem Ipsum</p>
                            <label></label>
                            <h5>For Women</h5>
                        </div>
                    </a>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <!--products-->
        <div class="content-mid">
            <h3>Xu Hướng Thời Trang</h3>
            <label class="line"></label>
            <div class="mid-popular">
                @foreach (var item in Model.TrendingItemsTop)
                {
                    var url = "/" + item.Alias + ".p-" + item.ID + ".html";
                    <div class="col-md-3 item-grid simpleCart_shelfItem">
                        <div class="mid-pop">
                            <div class="pro-img">
                                <img src="@item.Images" class="img-responsive" alt="">
                                <div class="zoom-icon ">
                                    <a class="picture b-link-stripe b-animate-go  thickbox" href="@item.Images" rel="title"><i class="glyphicon glyphicon-search icon "></i></a>
                                    <a href="@url"><i class="glyphicon glyphicon-menu-right icon"></i></a>
                                </div>
                            </div>
                            <div class="mid-1">
                                <div class="women">
                                    <div class="women-top">
                                        <span>Women</span>
                                        <h6><a href="@url">@item.Name</a></h6>
                                    </div>
                                    <div class="img item_add">
                                        <a href="#" class="btnAddToCart" data-id="@item.ID"><img src="/Assets/client/images/ca.png" alt=""></a>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="mid-2">
                                    <p><label>$100.00</label><em class="item_price">$@item.Price</em></p>
                                    <div class="block">
                                        <div class="starbox small ghosting"> </div>
                                    </div>

                                    <div class="clearfix"></div>
                                </div>

                            </div>
                        </div>
                    </div>
                }
              

                <div class="clearfix"></div>
            </div>
            <div class="mid-popular">
                @foreach (var item in Model.TrendingItemsBot)
                {
                    var url = "/" + item.Alias + ".p-" + item.ID + ".html";
                    <div class="col-md-3 item-grid simpleCart_shelfItem">
                        <div class="mid-pop">
                            <div class="pro-img">
                                <img src="@item.Images" class="img-responsive" alt="">
                                <div class="zoom-icon ">
                                    <a class="picture" href="@item.Images" rel="title" class="b-link-stripe b-animate-go  thickbox"><i class="glyphicon glyphicon-search icon "></i></a>
                                    <a href="@url"><i class="glyphicon glyphicon-menu-right icon"></i></a>
                                </div>
                            </div>
                            <div class="mid-1">
                                <div class="women">
                                    <div class="women-top">
                                        <span>Men</span>
                                        <h6><a href="@url">@item.Name</a></h6>
                                    </div>
                                    <div class="img item_add">
                                        <a href="#"  class="btnAddToCart" data-id="@item.ID"><img src="/Assets/client/images/ca.png" alt=""></a>
                                    </div>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="mid-2">
                                    <p><label>$100.00</label><em class="item_price">$@item.Price</em></p>
                                    <div class="block">
                                        <div class="starbox small ghosting"> </div>
                                    </div>

                                    <div class="clearfix"></div>
                                </div>

                            </div>
                        </div>
                    </div>

                }
                
                <div class="clearfix"></div>
            </div>
            <!--Can add more mid-popular-->
        </div>
        <!--//products-->
        <!--brand-->
        @{Html.RenderAction("Brand", "Home");}
        <!--//brand-->
    </div>

</div>

